            <RadioButton mnemonicParsing="false" prefHeight="40.0" prefWidth="68.0" styleClass="team-list" toggleGroup="$sidebarMenu" userData="TEAM_LIST"/>
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutY="640.0" prefHeight="40.0" prefWidth="65.0" styleClass="bottom-bar">
         <children>
            <Button mnemonicParsing="false" prefHeight="40.0" prefWidth="65.0" styleClass="log-out" />
         </children>
      </HBox>
   </children>
</AnchorPane>
