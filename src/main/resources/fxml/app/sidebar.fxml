<AnchorPane maxHeight="694.0" maxWidth="65.0" minHeight="694.0" minWidth="65.0" prefHeight="65.0" prefWidth="65.0" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espressoshock.drinkle.controllers.app.Sidebar">

    <stylesheets>
        <URL value="@../../css/app/sidebar.css" />
        <URL value="@../../css/common.css" />
    </stylesheets>
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="39.0" prefWidth="65.0">
         <children>
            <ImageView fitHeight="59.0" fitWidth="59.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/app/sidebar/profile-thumb@2x.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <VBox layoutY="119.0" opacity="0.89" prefHeight="300.0" prefWidth="65.0" spacing="30.0" styleClass="ordered-menu">
         <children>
            <RadioButton mnemonicParsing="false" prefHeight="40.0" prefWidth="68.0" styleClass="dashboard" userData="MAIN_DASHBOARD">
               <toggleGroup>
                  <ToggleGroup fx:id="sidebarMenu" />
               </toggleGroup>
